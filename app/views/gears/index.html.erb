<%= render "shared/header" %>

<input type="text" id="search" placeholder="what are you looking for?">

<% if !flash.empty? %>
	<p class="notice">
		<%= notice %>
	</p>
<% end %>

<table>
		<thead><th>gear</th><th>box</th></thead>
		<tbody>			
			<% @gear.each do |gear| %>
				<tr>
					<td><%= link_to gear.name, gear_path(gear) %>						
						</td>
					<td><%= gear.box_name %></td>
				</tr>
			<% end %>
		</tbody>
	</tr>
</table>