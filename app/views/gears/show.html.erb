<%= render "shared/header" %>
<%= render "shared/flash" %>
<h2>
  <strong><%= @gear.name %></strong> <span class="lighter">is in</span> <strong><%= @gear.box_name %></strong>
</h2>

<% if @gear.photo.attached? %>
  <img src="<%= (url_for(@gear.photo)) %>" style="max-width: 70%; margin: 0; padding: 0;">
<% end %>

<p><%= link_to 'Edit', edit_gear_path(@gear) %></p>

<p><%= link_to 'Delete', @gear, :confirm => "Are you sure?", :method => :delete %></p>
